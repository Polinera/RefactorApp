<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RefactorApp.UI.HomePage"
             xmlns:translation="clr-namespace:RefactorApp.UI.Resources"
             >

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                Style="{StaticResource MainPageCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                        WidthRequest="{StaticResource Image_WidthRequest}"
                           Source="goalmainimage.jpg"/>
                    <Label Grid.Row="1"
                        Text="x:Static translation:Strings.Main"
                        FontFamily="TwinkleStar" />
                </Grid>
            </Border>
            
            <Border Grid.Column="1"
                Style="{StaticResource MainPageCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0"
                        WidthRequest="{StaticResource Image_WidthRequest}"
                           Source="goalmainimage.jpg"/>
                    <Label Grid.Row="1"
                        Text="Welcome to newI!"
                        FontFamily="TwinkleStar" />

                </Grid>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>