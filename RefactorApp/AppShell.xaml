<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RefactorApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RefactorApp"
    xmlns:views="clr-namespace:RefactorApp.UI.Views;assembly=RefactorApp.UI"    
    Title="RefactorApp">

    <TabBar>
        <ShellContent 
        Title="Home" 
        ContentTemplate="{DataTemplate views:HomePage}" 
        Route="home" />
        <ShellContent 
        Title="Reflections" 
        ContentTemplate="{DataTemplate views:ReflectionsPage}" 
        Route="reflections" />
        <ShellContent 
        Title="History" 
        ContentTemplate="{DataTemplate views:HistoryPage}" 
        Route="history" />
    </TabBar>

</Shell>
