<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

	<x:Double x:Key="Conteiner_Margin">20</x:Double>
	<x:Double x:Key="Conteiner_Padding">20</x:Double>
	<CornerRadius x:Key="Conteiner_CornerRadius">20</CornerRadius>

    <Style x:Key="MainPageQuoteStyle"
		   TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryColorLight}, Dark={StaticResource PrimaryColorDark}}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="20"/>
        </Setter>
        <Setter Property="Padding" Value="{StaticResource Conteiner_Padding}" />
        <Setter Property="StrokeThickness" Value="0" />
    </Style>
    <Style x:Key="MainPageHabitsStyle"
		   TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondaryColorLight}, Dark={StaticResource SecondaryColorDark}}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="20"/>
        </Setter>
        <Setter Property="Padding" Value="{StaticResource Conteiner_Padding}" />
        <Setter Property="StrokeThickness" Value="0" />
    </Style>

    <Style x:Key="MainPageCardStyle"
		   TargetType="Border">
		<Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryColorLight}, Dark={StaticResource PrimaryColorDark}}" />
		<Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
		<Setter Property="StrokeShape">
			<RoundRectangle CornerRadius="20"/>
		</Setter>
		<Setter Property="Padding" Value="{StaticResource Conteiner_Padding}" />
		<Setter Property="StrokeThickness" Value="1" />
		<Setter Property="WidthRequest" Value="{StaticResource Border_WidthRequest}" />
		<Setter Property="HeightRequest" Value="{StaticResource Border_HeightRequest}" />
	</Style>

	<Style x:Key="HistryCardStyle"
		   TargetType="Border">
		<Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryColorLight}, Dark={StaticResource PrimaryColorDark}}" />
		<Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource PrimaryColorLight}, Dark={StaticResource PrimaryColorDark}}" />
		<Setter Property="StrokeShape">
			<RoundRectangle CornerRadius="20"/>
		</Setter>
		<Setter Property="Margin" Value="24,24,24,24" />
		<Setter Property="Padding" Value="{StaticResource Conteiner_Padding}" />
		<Setter Property="StrokeThickness" Value="1" />
		<Setter Property="WidthRequest" Value="{StaticResource Border_WidthRequest}" />
		<Setter Property="HeightRequest" Value="{StaticResource Border_HeightRequest}" />
	</Style>

	<Style TargetType="Border">
		<Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
		<Setter Property="StrokeShape" Value="Rectangle"/>
		<Setter Property="StrokeThickness" Value="1"/>
		<Setter Property="Margin" Value="{StaticResource LeftMargin}" />
	</Style>
</ResourceDictionary>